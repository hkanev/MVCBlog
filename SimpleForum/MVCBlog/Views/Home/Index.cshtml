@using MVCBlog.Models
@using SimpleForum.Models
@model MVCBlog.Models.BlogViewModels

<hr />
<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
</ol>
<hr />
<section id="blog" class="container-fluid">
    <div class="blog">
        <div class="row">
            <div class="col-md-8">
                @foreach (var post in Model.Posts)
                {
                    <div class="blog-item">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 text-center">
                                <div class="entry-meta">
                                    <span id="publish_date">@post.Date.ToString("dd MMM")</span>
                                    <span>
                                        @if (post.Author != null)
                                        {
                                            @: @post.Author.FullName
                                    }
                                        else
                                        {
                                            @:Annonymous
                                    }
                                    </span>
                                    <span>@post.Comment.Count Comments</span>
                                    <span>56 Views</span>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-10 blog-content">

                                <h2>@Html.ActionLink(post.Title, "Details", "Posts", new { id = post.Id }, null)</h2>
                                <h3>@Html.Raw(post.Description)</h3>
                            </div>
                        </div>
                    </div>
                    <!--/.blog-item-->
                }


                <ul class="pagination pagination-lg">
                    <li><a href="#"><i class="fa fa-long-arrow-left"></i>Previous Page</a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">Next Page<i class="fa fa-long-arrow-right"></i></a></li>
                </ul><!--/.pagination-->
            </div><!--/.col-md-8-->
            <aside class="col-md-4">

                <div class="widget categories">
                    <h3>Recent Comments</h3>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="single_comments">
                                @foreach (var comment in Model.Comments)
                                {
                                    <img src="~/Content/avatar3.png" />
                                    @Utils.CutText(comment.Content, 35)
                                    <div class="entry-meta small muted">
                                        <span>
                                            By
                                            @if (comment.Author != null)
                                            {
                                                @comment.Author.FullName;
                                            }
                                            else
                                            {
                                                @:Anonnymous 
                                            }
                                          </span>
                                        <span>
                                            On @Html.ActionLink(Utils.CutText(comment.Post.Title, 25),
                                                         "Details", "Posts", new { id = comment.Post.Id }, null)
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div><!--/.recent comments-->

                <div class="widget categories">
                    <h3>Categories</h3>
                    <div class="row">
                        <div class="col-sm-6">
                            <ul class="blog_category">
                                @foreach (var category in Model.Categories)
                                {
                                    <li><a href="#">@category.Name<span class="badge">@category.Posts.Count</span></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div><!--/.categories-->

                <div class="widget archieve">
                    <h3>Archieve</h3>
                    <div class="row">
                        <div class="col-sm-12">
                            <ul class="blog_category">
                                <li><a href="#">@DateTime.Now.ToString("MMMM")<span class="badge">04</span></a></li>
                                <li><a href="#">@DateTime.Now.AddMonths(-1).ToString("MMMM")<span class="badge">10</span></a></li>
                                <li><a href="#">@DateTime.Now.AddMonths(-2).ToString("MMMM")<span class="badge">06</span></a></li>
                                <li><a href="#">@DateTime.Now.AddMonths(-3).ToString("MMMM") <span class="badge">25</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div><!--/.archieve-->
            </aside>
        </div><!--/.row-->
    </div>
</section><!--/#blog-->
<!--/#bottom-->
