@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVC Blog</title>

   
    <link href="@Url.Content("~/Chosen/chosen.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/responsive.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/prettyPhoto.css")
    @Styles.Render("~/Content/animate.min.css")
    @Styles.Render("~/Content/main.css")





</head>
<body>
    <div class="navbar navbar-inverse navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MVC Blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("New Post", "Create", "Posts")</li>
                    @if (User.IsInRole("Administrators"))
                    {
                        <li>@Html.ActionLink("Admin panel", "Index", "Admin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
        

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MVC Blog</p>
        </footer>
    </div>
   
    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Chosen/chosen.jquery.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>